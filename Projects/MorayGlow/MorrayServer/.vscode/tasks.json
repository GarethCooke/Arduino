{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PIO Test (native)",
            "type": "shell",
            "command": "${env:USERPROFILE}/.platformio/penv/Scripts/pio",
            "args": ["test", "-e", "native"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Test Server",
            "type": "shell",
            "command": "npm start",
            "options": {
                "cwd": "${workspaceFolder}/../MorrayClient/test-server"
            },
            "group": "build",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}
